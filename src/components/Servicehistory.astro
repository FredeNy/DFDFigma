---
import "../styles/global.css";
const { img } = Astro.props;
---

<section>
  <div class="history">
  <h2>OUR HISTORY</h2>
  <h3>Strategy for Every Stage in the Client's Journey</h3>

</div>
  <div>
    <figure>
      <img src={img} class="hisimg" />
    </figure>
</div>
</section>

<style>
  section {
    background-color: var(--primary-three);
    padding: 3rem;
  }

.history {
   line-height: 1.475rem; 
   display: grid;
   gap: 2rem;

}

  h2 {
    font-size: var(--p-size);
    color: var(--secondary-two);
    background-color: var(--primary-two);
    padding: 0rem 0.6875rem;
    border-radius: 1.25rem;
    gap: var(--gap);
    line-height: 1.475rem; 
    letter-spacing: 0.145rem;
    text-align: center;
    margin: auto;
    width:20%;
   
  }

  h3 {
    text-align: center;
    font-size: var(--step-4);
    color: var(--secondary-two);
    font-family: "Cabin", sans-serif;
    line-height: 3.625rem;
    max-width: 41.75rem;
    margin: auto;
  }

  p {
    width: 45.75rem;
    margin: auto;
    font-family: "Lato", sans-serif;
  }

  .hisimg {
    border-radius: 1.25rem;
    flex-shrink: 0;
    display: block;
  margin-left: auto;
  margin-right: auto;
  width: 75%;
  }
